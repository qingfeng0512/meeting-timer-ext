{
  "manifest_version": 3,
  "name": "计时器",
  "version": "1.0.0",
  "description": "简洁实用的倒计时工具，支持多种时间预设和自定义时间",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "action": {
    "default_title": "计时器"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}